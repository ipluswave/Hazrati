%footer#footer.footer-nologo
  .footer-main
    .wrapper
      .row
        .col-md-3.col-sm-3
          %h4 Selling on Hazrati
          / Start foot-info
          .foot-info
            %ul
              %li
                %a{:href => new_listing_path} Post a New Product
              %li
                %a{:href => "/seller-manual"} Seller Manual
              %li
                %a{:href => "/"} View All Sellers

          / End foot-info
        / End col-md-3
        .col-md-3.col-sm-3
          %h4 Tools  Resources
          / Start foot-service
          .foot-service
            %ul
              %li
                %a{:href => "/affiliates"} Affiliates
          / End foot-service
        / End col-md-3
        .col-md-3.col-sm-3
          %h4 All About US
          / Start foot-support
          .foot-support
            %ul
              %li
                %a{:href => about_infos_path} About
              %li
                %a{:href => "/investors"} Investors
              %li
                %a{:href => "/return-and-refund-policy"} Return  Refund Policy
              %li
                %a{:href => new_user_feedback_path} Contact Us
            / End foot-support
          / Start follow
          / End foot-account
        / End col-md-3
        .col-md-3.col-sm-3
          .support
            %h4 Community
            / Start foot-account
            .foot-account
              %ul
                %li
                  %a{:href => "/"} Blog
          .follow
            .footer-follow
              %ul.list-float-left
                %li
                  %a.facebook.icon-button.smaller.border-none{:href => "https://www.facebook.com/Hazraticom-401120739940918/"}
                    %i.demo-icon.pesto-icon-facebook
                %li
                  %a.twitter.icon-button.smaller.border-none{:href => "https://twitter.com/HazratiJewelry"}
                    %i.demo-icon.pesto-icon-twitter
                %li
                  %a.instagram.icon-button.smaller.border-none{:href => "https://www.instagram.com/hazratimp/"}
                    %i.demo-icon.pesto-icon-instagram
                %li
                  %a.google.icon-button.smaller.border-none{:href => "https://plus.google.com/114018279538405001230"}
                    %i.demo-icon.pesto-icon-google
                %li
                  %a.pinterest.icon-button.smaller.border-none{:href => "https://www.pinterest.com/hazratijewelry/"}
                    %i.demo-icon.pesto-icon-pinterest
            / End foot-follow
          / End follow
        / End col-md-3
      / End row
    / End .wrapper
  .join.clearfix
    .wrapper
      / Start footer-join
      .footer-join
        %h3
          JOIN THE COMMUNITY
        #joinEmailSuccess.alert.alert-success.hidden
          %strong Success!
          You've been added to our email list.
        #joinEmailDanger.alert.alert-danger.hidden
        / Start emailForm
        %form#emailForm{:action => "php/email.php", :method => "POST", :novalidate => "novalidate"}
          .input-group
            %input#yourEmail.form-control{"aria-invalid" => "true", "aria-required" => "true", :name => "yourEmail", :placeholder => "your@email.com", :type => "text"}
              %button.btn.icon-button.large{:type => "submit"}
                %i.pesto-icon-keyboard
          / End emailForm
        / End footer-join
        .footer-links.clearfix
          %ul
            %li
              %a{:href => about_infos_path} About Us
            %li
              %a{:href => "/terms-of-use"} Terms of Use
            %li
              %a{:href => "/cookies"} Cookies
            %li
              %a{:href => "/privacy"} Privacy Policy
            %li
              %a{:href => "/copyright"} Copyright
            %li
              %a.free{:href => "/interest-based-ads"} Interest-based Ads

    / End Footer-main
  / End footer
