- show_locales = available_locales.size > 1

- content_for :title_header do
  .browse-view-search-form
    = render partial: "homepage/search_bar"

/ Start Content
%section.content
  / Start Content-Header
  .content-header.breadcrumb-header
    .wrapper
      .row
        .col-md-12
          .pull-left
            %h2 
              = t("admin.communities.topbar.topbar")
          %ul.breadcrumb.pull-right
            %li
              %a{:href => "/"} HomeÂ 
            %li Admin Panel
  / End .content-header
  / Start Content-Main
  .content-main
    .wrapper
      .pt-one-41
        = render :partial => "admin/left_hand_navigation", :locals => { :links => admin_links_for(@current_community) }

        .left-navi-section
          %h2= t("admin.communities.topbar.topbar")
          = form_for community, :url => admin_topbar_path, :method => :patch, html: {id: "topbar-menu-form"} do |form|

            = render partial: "new_listing_button", locals: { show_locales: show_locales }

            = render partial: "menu_links", locals: { community: community, show_locales: show_locales, limit_priority_links: limit_priority_links, limit_priority_links_options: limit_priority_links_options, limit_priority_links_selected: limit_priority_links_selected }

            .row
              .col-12
                = form.button t("admin.communities.menu_links.save")
